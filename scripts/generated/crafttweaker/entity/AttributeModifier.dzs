
zenClass AttributeModifier {
    var saved as bool;
    val name as string;
    val amount as double;
    val uuid as string;
    val operation as int;
    
    static function createModifier(name as string, amount as double, operation as int, uuid as string = null) as AttributeModifier;
    
    function isSaved() as bool;
    
    function setSaved(saved as bool) as void;
    
    function getName() as string;
    
    function getAmount() as double;
    
    function getUUID() as string;
    
    function getOperation() as int;
}